---
// Title component with custom styling
export interface Props {
  text: string;
  className?: string;
}

const { text, className = '' } = Astro.props;
---

<h2 class={`title-component ${className}`}>
  {text}
</h2>

<style>
  .title-component {
    color: #3C1914;
    font-family: 'Nunito Sans', sans-serif;
    font-weight: bold;
    font-style: italic;
    line-height: 1.2;
    margin: 0;
  }
  
  @media (min-width: 300px) {
    .title-component {
      font-size: 1.3rem;
    }
  }
  
  @media (min-width: 1024px) {
    .title-component {
      font-size: 1.8rem;
    }
  }
</style>