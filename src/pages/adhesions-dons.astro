---
import Layout from '../layouts/Layout.astro';
import { BsArrowDownCircle } from "react-icons/bs";
import Title from '../ui/Title/Title.astro';
import '../styles/variables.css';
import '../styles/adhesions-dons.css';
import Donations from '../ui/Donations/Donations.astro';
import HowWork from '../ui/HowWork/HowWork.astro';
import ImageMoney from '../ui/imageMoney/imageMoney.astro';
import Button from '../ui/Button/Button.astro';
---

<Layout 
  title="Adhésions et dons "
  description="Adhérez à l’association Hyperacousie Solidarité ou faites un don pour soutenir la recherche, la sensibilisation et l’accompagnement des personnes touchées par l’hyperacousie et les troubles auditifs. Découvrez nos offres d’adhésion, nos supports dédiés et les modalités de paiement en ligne, par chèque ou virement. Rejoignez une communauté engagée pour améliorer la qualité de vie et la reconnaissance du handicap auditif."
>
  <section class="adhesions-header">
    <ImageMoney width={100} height={100} />
    <Title text="Adhésions et dons" level='2' />
    
    <section class="adhesions-content">
    <p class="adhesions-intro">
      Soutenez l’association Hyperacousie Solidarité: adhérez ou faites un don pour permettre nos actions et recevoir nos supports dédiés.
    </p>  
    <HowWork />
    <Donations />
    <div class="adhesions-arrow">
      <BsArrowDownCircle size={50} color="#ff6f61" aria-hidden="true" focusable="false" />
    </div>
    <Button 
      variant="teal" 
      size="sm"
      href="https://www.helloasso.com/associations/hyperacousie-solidarite"
      aria-label="Adhérer à l'association ou faire un don via HelloAsso"
      target="_blank"
      rel="noopener"
      class="donation-form-link"
    >
      Adhérer / Faire un don
    </Button>
   
  </section>


</Layout>