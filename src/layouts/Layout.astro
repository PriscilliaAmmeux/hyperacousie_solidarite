---
import Footer from '../ui/Footer/Footer.astro';
import Header from '../ui/Header/Header.astro';
import '../styles/variables.css';
import '../ui/Button/Button.css';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Hyperacousie Solidarité', 
  description = 'Ensemble pour sensibiliser et soutenir les personnes touchées par l\'hyperacousie'
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
	  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="/src/styles/variables.css">
		<style>
			* {
				margin: 0 !important;
				padding: 0 !important;
				box-sizing: border-box;
			}
			
			html, body {
				margin: 0 !important;
				padding: 0 !important;
				background-color: var(--color-background-white);
				color: var(--color-black);
				font-family: system-ui, -apple-system, sans-serif;
			}
			
			h1, h2, h3, h4, h5, h6, p {
				margin: 0 !important;
				color: var(--color-black);
			}
			
			/* Force la couleur pour tous les éléments de texte */
			*, *::before, *::after {
				color: var(--color-black);
			}
		</style>
	</head>
	<body class="min-h-screen flex flex-col">
		<Header currentPath={currentPath} />

		<main class="flex-1 w-full">
			<slot />
		</main>

		<Footer />
	</body>
</html>
