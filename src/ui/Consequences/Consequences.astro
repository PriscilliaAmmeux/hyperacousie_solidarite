---
import './Consequences.css';
import Title from '../Title/Title.astro';
---

<section class="consequences-section">
  <div class="consequences-content">
    <Title
      text="Conséquences de l'hyperacousie"
      className="mb-4 section-title"
      level="2"
    />
    <img 
      src="/schema-consequences.webp" 
      alt="Schéma des conséquences de l'hyperacousie sur la vie quotidienne : vie sociale, vie professionnelle, vie familiale, santé mentale et épuisement physique."
      class="consequences-image"
      aria-label="Conséquences de l'hyperacousie sur différents aspects de la vie quotidienne."
      id="downloadable-image" />

 
    
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const image = document.getElementById('downloadable-image');
    
    if (image) {
      image.addEventListener('click', function() {
        const link = document.createElement('a');
        link.href = '/schema-consequences.webp';
        link.download = 'schema-consequences-hyperacousie.webp';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
      });
    }
  });
</script>
   