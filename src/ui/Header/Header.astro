---
import Navbar from '../NavBar/NavBar.astro';
import NavBarMobile from '../NavBarMobile/NavBarMobile.astro';
import './Header.css';
import '../../styles/variables.css';

export interface Props {
  currentPath?: string;
}

const { currentPath } = Astro.props;
---

<header class="relative m-0 p-0">
    <!-- Navigation desktop -->
  <section 
    class="desktop-hero-section relative bg-gradient-to-r from-blue-50 to-blue-100 bg-cover bg-center bg-no-repeat py-72 m-0"
    style="background-image: linear-gradient(rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)), url('/background-header.webp');"
  >
    <div class="w-full py-24" style="display: flex; flex-direction: column; align-items: center; justify-content: center; text-align: center;">
      <!-- Titre principal -->
      <h1 class="text-4xl md:text-6xl font-bold text-black tracking-tight py-8 text-center w-full" style="color: var(--color-black);">
        Hyperacousie Solidarité
      </h1>
      <p class="text-lg leading-relaxed py-6 text-center max-w-4xl mx-auto px-4" style="color: var(--color-teal);">
        Une communauté bienveillante pour toutes les personnes touchées par l'hypersensibilité auditive
      </p>
    </div>
  </section>


  <section class="desktop-nav-section bg-slate-800 text-white shadow-lg">
    <div class="w-full py-4">
      <Navbar currentPath={currentPath} />
    </div>
  </section>

  <!-- Navigation mobile -->
  <section class="mobile-logo-section py-4 px-4 flex justify-center items-center">
      <img 
        src="/logo-mobile.webp" 
        alt="Logo Hyperacousie Solidarité"
        class="h-16 "
      />
  </section>

  <div class="mobile-navbar-container">
    <NavBarMobile currentPath={currentPath} />
  </div>
</header>

