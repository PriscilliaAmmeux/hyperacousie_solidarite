---
export interface Props {
  text: string;
  className?: string;
  level?: '1' | '2' | '3' | '4' | '5' | '6';
}

const { text, className = '', level = '2' } = Astro.props;

// Astro ne sait pas que Tag est un élément HTML → on le "force"
const Tag = (`h${level}` as keyof HTMLElementTagNameMap);
---

<Tag class={`title-component ${className}`}>
  {text}
</Tag>
