---

<section>
  <div style="text-align:center">
    <Title
      text="Réseaux & Partages"
      className="mb-4 section-title-page"
      level="2"
    />
  </div>
  <div class="networking-card-list">
    {cards.map((card) => (
      <div class="networking-card" >
        <p class={`networking-card-top-label ${card.buttonTopColor}`}>
          {card.contentTextButtonTop}
        </p>
        <h3 class="networking-card-title">{card.title}</h3>
        <p class="networking-card-text">{card.text}</p>
        <button
          class={`btn-base btn-sm btn-${card.buttonBotomColor}`}
          type="button"
        >
          {card.contentTextButtonBottom}
        </button>
      </div>
    ))}
  </div>
</section>